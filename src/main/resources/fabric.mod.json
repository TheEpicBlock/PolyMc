{
  "schemaVersion": 1,
  "id": "polymc",
  "version": "${version}",

  "name": "PolyMc",
  "description": "An attempt to make mods compatible with vanilla clients.",
  "authors": [
    "TheEpicBlock"
  ],
  "contact": {
    "homepage": "https://github.com/TheEpicBlock/PolyMc/wiki",
    "issues": "https://github.com/TheEpicBlock/PolyMc/issues",
    "sources": "https://github.com/TheEpicBlock/PolyMc"
  },

  "license": "LGPL-3.0-or-later",
  "icon": "assets/polymc/icon.png",

  "environment": "server",
  "entrypoints": {
    "main": [
      "io.github.theepicblock.polymc.PolyMc"
    ]
  },
  "mixins": [
    "polymc.mixins.json"
  ],
  "accessWidener": "polymc.accesswidener",

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=16"
  },
  "breaks": {
    "immersive_portals": "*"
  }
}
